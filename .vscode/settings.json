{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    // REMOVE "source.fixAll": "always" - it's too aggressive
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": ["typescript", "html"],
  // Change this to "onType" so you see errors immediately
  // without waiting for a save to trigger a "fix war"
  "eslint.run": "onType",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Ensure the editor doesn't try to "help" and mess up Prettier
  "editor.formatOnType": false
}
